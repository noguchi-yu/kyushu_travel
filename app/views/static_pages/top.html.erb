<div class="relative w-full pb-[56.25%] overflow-hidden">
	<%= image_tag 'top.png', class: "top-images absolute top-0 left-0 w-full h-full transition-opacity duration-[4s] ease-in-out fullscreen-image opacity-1" %>
</div>
<div class="mx-auto w-11/12 text-center max-w-lg">
	<section>
		<div class="relative items-center w-full px-5 py-12 mx-auto md:px-12 lg:px-16 max-w-7xl lg:py-24">
			<div class="flex w-full mx-auto text-left">
				<div class="relative inline-flex items-center mx-auto align-middle">
					<div class="text-center">
						<h1 class="max-w-5xl text-2xl font-bold leading-none tracking-tighter text-neutral-600 md:text-5xl lg:text-6xl lg:max-w-7xl">
							Let's travel to Kyushu <br class="hidden lg:block">
							may discover something new
						</h1>
						<p class="max-w-xl mx-auto mt-8 text-base leading-relaxed text-gray-500">あなたの知らない九州がきっとみつかる</p>
						<div class="flex justify-center w-full max-w-2xl gap-2 mx-auto mt-6">
							<div class="mt-3 rounded-lg sm:mt-0">
								<button class="btn btn-success text-neutral-600"><%= link_to 'ログイン', login_path %></button>
							</div>
							<div class="mt-3 rounded-lg sm:mt-0 sm:ml-3">
								<button class="btn btn-error text-neutral-600">みてみる！</button>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</div>
