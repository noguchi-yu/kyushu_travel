<%= devise_error_messages %>
<section>
  <div class=" items-center px-5 py-12 lg:px-20">
    <div class="flex flex-col w-full max-w-md p-10 mx-auto my-6 transition duration-500 ease-in-out transform bg-neutral-content rounded-lg md:mt-0">
      <div class="mt-3 text-left sm:mt-5">
        <div class="inline-flex items-center w-full">
          <h3 class="text-lg font-bold text-neutral-600 l eading-6 lg:text-5xl"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Forgot<br>Password?</font></font></h3>
        </div>
      </div>
      <div class="mt-8">
        <div class="mt-6 space-y-6">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <div class="field">
              <%= f.label :email, class: "block text-sm font-medium text-neutral-600" %><br />
              <div class="mt-1">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Your Email", class: "block w-full px-5 py-3 text-base text-neutral-600 placeholder-gray-300 transition duration-500 ease-in-out transform border border-transparent rounded-lg bg-gray-50 focus:outline-none focus:border-transparent focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-300" %>
              </div>
            </div>

            <div class="mt-6">
                <%= f.submit "パスワード再発行", class: "flex items-center justify-center w-full px-10 py-4 text-neutral-600 font-medium text-center text-neutral-600 btn btn-success" %>
            </div>
            <div class="flex items-center justify-center mt-6">
                <div class="text-sm">
                    <%= link_to "ログイン", login_path, class: "font-medium text-neutral-600 hover:text-neutral-400" %>
                </div>
                <p class="text-sm mx-2">/</p>
                <div class="text-sm">
                    <%= link_to "新規登録", new_user_registration_path, class: "font-medium text-neutral-600 hover:text-neutral-400" %>
                </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

